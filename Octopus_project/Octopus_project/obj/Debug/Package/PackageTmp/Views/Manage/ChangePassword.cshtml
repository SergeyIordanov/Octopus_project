@model Octopus_project.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<header class="header">
    <div style="position: relative; padding: 0px;" class="top-bar">
        <a href="/">
            <div style="width: 200px; position:absolute; left: 50%; margin-left: -100px" class="site-title">
                <img style="width: 100%;" src="~/Content/site-title.png" alt="site-title" />
            </div>
        </a>
    </div>
    <div class="clear"></div>
</header>


@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="login-form">

        <h1 align="center">Change password</h1>
        <div class="thin-hr"></div>

        @Html.ValidationSummary("", new { @class = "text-danger", align="center"})
        @*<h1 id="errors" style="text-align: center; color: red; font-weight: 200"></h1> <!-- For errors -->*@

        <div class="container">
            <div class="grid-12">
                @Html.PasswordFor(m => m.OldPassword, new { @class = "standart-input black-color-input middle-input", placeholder = "Old password" })
                @*<input type="password" placeholder="Old password" class="standart-input black-color-input middle-input" />*@
            </div>
            <div class="grid-12">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "standart-input black-color-input middle-input", placeholder = "New password" })
                @*<input type="password" placeholder="New password" class="standart-input black-color-input middle-input" />*@
            </div>
            <div class="grid-12">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "standart-input black-color-input middle-input", placeholder = "Confirm new password" })
                @*<input type="password" placeholder="Confirm new password" class="standart-input black-color-input  middle-input" />*@
            </div>
            <div class="grid-12">
                <input value="Change password" class="standart-input inverse-button middle-input" type="submit" />
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}